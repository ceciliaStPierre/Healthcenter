<% if notice %>
<div class="notice text-center"><%= notice %></div>
<% end -%>
<% if alert %>
<div class="alert text-center"><%= alert %></div>
<% end -%>

<% if ! current_user %>
<div class="welcome-links">
  <h1>Welcome!</h1>
  <%= link_to 'Sign in', new_session_path, {:class => "btn btn-lg btn-primary btn-block"} %>
  <!--<%= link_to 'Â¡Registrate!', new_user_path, {:class => "btn btn-lg btn-primary btn-block"} %>-->
</div>
<% else -%>

<h1>My Plans </h1>
<% @myfamilies.each do |family_group| %>

<div class="col-md-6">
  <h4> <%= family_group.family_name %> Family: <%= family_group.family_description %></h4>
</div>
<div class="col-md-6">
  <%= link_to "Show Plans", {:controller => "plans",:action => "index",  :id=>family_group.id}, class: "btn btn-default" %>
</div>
<% end %>
<% end %>




