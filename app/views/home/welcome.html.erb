<% if notice %>
<div class="notice"><%= notice %></div>
<% end -%>
<% if alert %>
<div class="alert"><%= alert %></div>
<% end -%>

<% if ! current_user %>
<div class="welcome-links">
  <h1> ¡Bienvenido!</h1>
  <%= link_to 'Iniciar sesión', new_session_path, {:class => "btn btn-lg btn-primary btn-block"} %>
  <!--<%= link_to '¡Registrate!', new_user_path, {:class => "btn btn-lg btn-primary btn-block"} %>-->
</div>
<% else -%>

<h1>MIS PLANES </h1>
<% @myfamilies.each do |family_group| %>

<div class="col-md-6">
  <h4>Familia <%= family_group.family_name %></h4>
</div>
<div class="col-md-6">
  <%= link_to "Ver Planes", {:controller => "plans",:action => "index",  :id=>family_group.id}, class: "btn btn-default" %>
</div>
<% end %>
<% end %>




