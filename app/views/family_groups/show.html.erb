<p id="notice"><%= notice %></p>
<div class="col-md-2">

<%= link_to 'Editar', edit_family_group_path(@family_group), :class=>"btn btn-default btn-100" %>
<%= link_to 'Agregar Paciente', {:controller=> "family_groups",:action=>"add", :id=>@family_group.id}, :class=>"btn btn-default btn-100" %>


</div>
<div class="col-md-10">

<div class="center">
	<h1>Familia <%= @family_group.family_name %></h1>
  <h2><%= @family_group.family_description %></h2>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Miembros</th>
      <th>Edad</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @family_group.patients.each do |patient| %>
        <tr>
          <td><%= link_to patient.firstname+" "+patient.father_lastname, patient %></td>
          <td><%=  (Date.today-patient.born_date).to_i/365  %></td>
          <!--<td><%= FamilyGroups(patient.family_groups) %></td>-->

        </tr>
      <% end %>
  </tbody>
</table>

</div>