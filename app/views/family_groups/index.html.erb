<div class="col-md-2">
<h2><%= link_to 'Crear Grupo', new_family_group_path,:class => "btn btn-default btn-100" %></h2>
</div>

<div class="col-md-10">

<table class="table table-condensed">
	<thead>
		<tr>
			<th>Nombre Grupo Familiar </th>
			<th>Integrantes </th>
			<th>Planes</th>
		</tr>
	</thead>
	<tbody>
	    <% @family_groups.each do |family_group| %>
	      <tr>
	        <td><%= link_to family_group.family_name, family_group %></td>
	        <td><%= FamilyMembers(family_group.patients) %></td>
	        <td><%= link_to 'Ver planes', planslink_path(family_group.id) %></td>
	      </tr>
	    <% end %>
	</tbody>
</table>
</div>
