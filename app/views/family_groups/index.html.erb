<div class="col-md-2">
<h2><%= link_to 'Create Group', new_family_group_path,:class => "btn btn-default btn-100" %></h2>
</div>

<div class="col-md-10">

<table class="table table-condensed">
	<thead>
		<tr>
			<th>Family Group Name </th>
			<th>Members </th>
			<th>Plans</th>
		</tr>
	</thead>
	<tbody>
	    <% @family_groups.each do |family_group| %>
	    <% family_group_full_name = family_group.family_name.to_s+': '+family_group.family_description.to_s %>
	      <tr>
	        <td><%= link_to family_group_full_name, family_group %></td>
	        <td><%= FamilyMembers(family_group.patients) %></td>
	        <td><%= link_to 'Show Plans', planslink_path(family_group.id) %></td>
	      </tr>
	    <% end %>
	</tbody>
</table>
</div>
