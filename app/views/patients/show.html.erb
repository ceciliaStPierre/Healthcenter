<p id="notice"><%= notice %></p>

<div class="people-container">
      <p> <strong>Nombre:</strong> <%= @patient.firstname+" "+@patient.secondname+" "+@patient.father_lastname+" "+@patient.mother_lastname%></p>
      <p> <strong>Fecha de nacimiento:</strong> <%=@patient.born_date.strftime("%d/%m/%Y") %></p>
      <p><strong>Sexo: </strong><%=@patient.sex %></p>
      <p><strong>Dirección: </strong><%=@patient.home_adress%></p>
      <p><strong>Teléfono del paciente: </strong><%=@patient.phone_number%></p>
      <p><strong>Listado de enfermedades:</strong></p>
      <% @patient.diseases.split(",").each do |disease| %>
            <%= DiseaseDisplay(disease) %>
      <% end %>
      <div id="risk-factors">
            <p><strong>Factores de riesgo: </strong></p>
            <% @patient.risk_details.split(",").each do |item| %>
                  <p> - <%=item%> </p>
            <% end %>
      </div>
      <div id="protection-factors">
            <p><strong>Factores protectores: </strong></p>
            <% @patient.protection_details.split(",").each do |item| %>
                  <p> - <%=item%> </p>
            <% end %>
      </div>
      <p><strong>Nivel de riesgo: </strong><%=@patient.risk_factor %></p>

  </div>
</div>

<br>

<%= link_to 'Editar', edit_patient_path(@patient) %>
