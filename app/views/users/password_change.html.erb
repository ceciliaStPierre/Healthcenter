<p id="notice"><%= notice %></p>
<div class="form-wrapper">
<%= form_tag({:controller => "users", :action => "update_password", :id => @user.id}, :method => "post") do %>
	<div class="form-group">
		<label class="col-lg-4 control-label"> Contraseña Nueva </label>
		<div class="col-lg-8">
		    <%= password_field_tag :password, params[:password], placeholder: "Contraseña Nueva", :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-4 control-label"> Confirmar Contraseña </label>
		<div class="col-lg-8">
		  <%= password_field_tag :password_confirmation, params[:password_confirmation], placeholder: "Confirmar Contraseña", :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-4 control-label"> Contraseña Actual </label>
		<div class="col-lg-8">
		  <%= password_field_tag :current_password, params[:current_password], placeholder: "Contraseña Actual", :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
		  <%= submit_tag "Actualizar", :class => "btn btn-default" %>
		</div>
	</div>
<% end %>
</div>