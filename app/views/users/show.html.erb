<p id="notice"><%= notice %></p>

<div class="col-md-2">
<%= link_to 'Team', users_path, :class =>"btn btn-default btn-100" %>
<% if current_user == @user || current_user.is_admin %>
  <%= link_to 'Edit', edit_user_path(@user), :class =>"btn btn-default btn-100" %>
<% end %>
  </div>


<div class="col-md-10">
<div class="people-container">
  <div class="people-container-left">
      <%= image_tag(@user.avatar.url(:small)) %>
  </div>
  <div class="people-container-right">
      <p> <strong>Name:</strong> <%= @user.firstname+" "+@user.secondname+" "+@user.father_lastname+" "+@user.mother_lastname%></p>
      <p><strong>Spetiality: </strong><%=@user.speciality %></p>
      <p><strong>Program: </strong><%=@user.program%></p>
      <p><strong>Sector: </strong><%=@user.sector%></p>
      <p><strong>E-mail: </strong><%=@user.email%></p>
      <p><strong>Phone Number: </strong><%=@user.phone_number%></p>
  </div>
  
</div>
</div>


