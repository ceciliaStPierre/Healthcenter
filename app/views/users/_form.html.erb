<div class="form-wrapper">
  <%= form_for (@user), :html => {:class => 'form-horizontal'} do |f| %>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label 'Change Image:', :class => "col-lg-4 control-label" %>

    <div class="col-lg-8">
      <%= f.file_field :avatar, :class=>"pull-left" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'First Name:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :firstname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Second Name:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :secondname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'First Family Name:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :father_lastname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Second Family Name:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :mother_lastname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Phone number:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.number_field :phone_number, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'speciality:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :speciality, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Program:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :program, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Sector:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :sector, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'E-mail:', :class => "col-lg-4 control-label" %>
    <div class="col-lg-8">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-4 control-label">Confirmation Password </label>
    <div class="col-lg-8">
      <%= password_field_tag :current_password, params[:current_password], placeholder: "Current Password", :class => "form-control" %>
    </div>
  </div>



  <div class="form-group">
    <label class="col-lg-4 control-label"><%= link_to 'Change Password', password_change_path(@user.id) %></label>
    <div class="col-lg-8">
      <%= f.submit "Update", :class => "btn btn-default" %>
    </div>
  </div>


  <% end %>

</div>